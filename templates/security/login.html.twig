

{% block body %}
{% include "partials/header.html.twig" %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
        </div>
    {% endif %}


    <div class="formContainer">
            <div class="loginTop">
                <div class="pic">
                <i class="fa-solid fa-user-lock"></i>
                </div>
                {# <h4 class="loginTit">Connexion</h4> #}
            </div>
            <div class="loginMid">
            <div class="form-group">
                  {# <input type="text" name="username" id="username" autocomplete = "off" required> #}
                {# <input type="email" name="" id="" autocomplete = 'off'> #}
            {# <input type="text" name="" id=""> #}
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required>
                <label for="inputEmail">Nom d'utilisateur</label>
            </div>
            <div class="form-group">
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                <label for="inputPassword">Mot de passe</label>
            </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            </div>
            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}
            <div class="loginBot">

                <div class="botTop">
                    <button class="btn btn-lg btn-primary" type="submit">
                        Se connecter
                    </button>
                </div>
                <div class="botBot">
                    <a href="#">
                        <h4>Cr√©er un compte</h4>
                    </a>
                </div>
            </div>
    </div>
</form>

{{encore_entry_link_tags('login')}}
{{encore_entry_script_tags('nav')}}

{% endblock %}
